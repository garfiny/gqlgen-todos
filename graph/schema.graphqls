# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Date
scalar YesNo

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
  dates: Dates!
}

type Dates {
    createdDate: Date!
    dueDate: Date
    completionDate: Date
}

type User {
  id: ID!
  name: String!
}

type Query {
  todos: [Todo!]!
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
